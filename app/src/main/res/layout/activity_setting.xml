<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="@drawable/bg_help_setting">

    <RelativeLayout
        android:id="@+id/layoutTextSetting"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSetting"
            android:text=" Music Mute"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="24dp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox1"
            android:text=" Sound Mute"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/backButtonScore"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue"
        android:onClick="goBack"
        android:layout_below="@+id/layoutTextSetting"/>

</RelativeLayout>